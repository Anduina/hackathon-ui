<style media="screen">
    .row{margin-bottom:10px;}
</style>
<div class="col-lg-12">
<div class="row text-center">
    <h2>Cadastro de Vaga</h2>
</div>
<div class="row">
    <label for="title" class="col-md-2">
        Titulo:
    </label>
    <div class="col-md-9">
      {{input
          id          = 'title'
          type        = "text"
          class       = "form-control"
          placeholder = "Titulo"
          value       =  model.title
          required    =  true
       }}
    </div>
</div>
<div class="row">
    <label for="discriptionInput" class="col-md-2">
        Descrição:
    </label>
    <div class="col-md-9">
      {{input
        id          = 'discriptionInput'
        type        = "text"
        class       = "form-control"
        placeholder = "Descrição"
        value       =  model.description
        required    =  true
     }}
    </div>
</div>
<div class="row">
    <label for="" class="col-md-2">
        Agencia:
    </label>
    <div class="col-md-9">
      {{ember-selectize
        content=controller.employer
        optionValuePath="content"
        optionLabelPath="content.name"
        selection=model.employer
        placeholder="Selecione uma agencia" }}
    </div>
</div>
<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-10">
        <button {{action 'save'}} class="btn btn-info">
            Register
        </button>
    </div>
</div>
</div>
