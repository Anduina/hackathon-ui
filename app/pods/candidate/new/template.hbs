<style media="screen">
    .row{margin-bottom:10px;}
</style>
<div class="col-lg-12">
<div class="row text-center">
    <h2>Cadastro de candidato</h2>
</div>
<div class="row">
    <label for="firstname" class="col-md-2">
        Nome:
    </label>
    <div class="col-md-9">
      {{input
          id          = 'firstname'
          type        = "text"
          class       = "form-control"
          placeholder = "Nome"
          value       =  model.candidate.name
          required    =  true
       }}
    </div>
</div>
<div class="row">
    <label for="emailaddress" class="col-md-2">
        Email:
    </label>
    <div class="col-md-9">
      {{input
        id          = 'emailaddress'
        type        = "email"
        class       = "form-control"
        placeholder = "Email"
        value       =  model.candidate.email
        required    =  true
     }}
     <p class="help-block">
         Example: yourname@domain.com
     </p>
    </div>
</div>
<div class="row">
    <label for="cpf" class="col-md-2">
        CPF:
    </label>
    <div class="col-md-9">
      {{input
        id          = 'cpf'
        type        = "text"
        class       = "form-control"
        placeholder = "000.000.000-00"
        value       =  model.candidate.cpf
        required    =  true
      }}
    </div>
</div>
<div class="row">
    <label for="rg" class="col-md-2">
        RG:
    </label>
    <div class="col-md-9">
      {{input
        id          = 'rg'
        type        = "text"
        class       = "form-control"
        placeholder = "RG"
        value       =  model.candidate.rg
        required    =  true
      }}
    </div>
</div>
<div class="row">
    <label for="phone" class="col-md-2">
        Telefone:
    </label>
    <div class="col-md-9">
      {{input
        id          = 'phone'
        type        = "text"
        class       = "form-control"
        placeholder = "Telefone"
        value       =  model.candidate.phone
        required    =  true
      }}
    </div>
</div>
<div class="row">
    <label for="city" class="col-md-2">
        Cidade:
    </label>
    <div class="col-md-9">
      {{input
        id          = 'city'
        type        = "text"
        class       = "form-control"
        placeholder = "Cidade"
        value       =  model.candidate.city
        required    =  true
      }}
    </div>
</div>
<div class="row">
    <label for="bairro" class="col-md-2">
        Bairro:
    </label>
    <div class="col-md-9">
      {{input
        id          = 'bairro'
        type        = "text"
        class       = "form-control"
        placeholder = "Bairro"
        value       =  model.candidate.neighborhood
        required    =  true
      }}
    </div>
</div>
<div class="row">
    <label for="" class="col-md-2">
        Agencia:
    </label>
    <div class="col-md-9">
      {{ember-selectize
        content=model.agency
        optionValuePath="content"
        optionLabelPath="content.name"
        selection=model.candidate.agency
        placeholder="Selecione uma agencia" }}
    </div>
</div>
<div class="row">
    <label for="competence" class="col-sm-2 col-xs-12">
        competencias:
    </label>
    <div class="col-sm-3 col-xs-3">
      {{input
        id          = 'competence'
        type        = "text"
        class       = "form-control"
        placeholder = "competencia"
        value       =  competence
        required    =  true
      }}
    </div>
    <div class="col-md-2 col-xs-2 col-sm-2 col-lg-2">
      <button  class="btn btn-primary" {{action 'Addcompetence'}}><i class="fa fa-book"></i></button>
    </div>
</div>
<div class="row">
  {{#each item in model.candidate.competences}}
    <div class="col-md-2 itens">
      <div class="panel panel-default">
        <div class="panel-heading"><p class="text-center">{{item.name}}</p></div>
      </div>
    </div>
  {{/each}}
</div>
<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-10">
        <button {{action 'save'}} class="btn btn-amarelo">
            Register
        </button>
    </div>
</div>
</div>
